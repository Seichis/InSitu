<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="webinar.pubnub.insitu.fragments.ExplorationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/intensity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/graph_color8"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/intensity" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/pick_day_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/high"
            android:text="@string/pick_single_date"
            android:textColor="@color/graph_color5"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/single_day" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/pick_range_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/high"
            android:text="@string/pick_range_date"
            android:textColor="@color/graph_color5"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/range_days" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/distress_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/graph_color8"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/distress" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.BubbleChart
        android:id="@+id/bubble_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/by_activities_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorPrimaryDark"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/activities" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/by_weather_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorPrimaryDark"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/weather" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/by_body_part_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorPrimaryDark"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/body_part" />
    </LinearLayout>
</LinearLayout>

